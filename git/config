[init]
	defaultBranch = main

[alias]
    a = add
    aa = add -A
    b = branch
    sb = branch -av
    c = commit
    ca = commit -a
    co = checkout
    d = diff
    fa = fetch --all
    l = log
    ln = log -n
    ls = log --stat
    lu = log -u
    p = push
    pf = push --force
    ps = push -o ci.skip
    pu = pull
    s = status
    sn = commit -am "Snapshot"
    sw = switch

[pull]
    rebase = true

[credential]
    helper = store --file ~/.gitcredential
