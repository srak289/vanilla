#!/bin/bash

alias vim='nvim'
alias vi='nvim'
alias e='nvim'

alias nj='nvim +"Neorg journal today"'
alias njc='nvim +"Neorg journal custom"'
alias ni='nvim +"Neorg index"'

alias ve='source .env/bin/activate'

alias al='ssh-add -L'
alias aa='ssh-add'
alias aac='ssh-add -s /usr/lib/x86_64-linux-gnu/opensc-pkcs11.so'
alias ar='vanilla::reset_agent'
alias arou='vanilla::agent_roulette'

alias ls='ls --color=auto'
if [ $(which rg &> /dev/null) ]; then
    alias grep='rg'
else
    alias grep='grep --color=auto'
fi

if [ $(which doas &> /dev/null) ]; then
    alias sudo='doas'
fi

# why lead with l?
alias s='ls -CF'
alias a='ls -lA'
alias sa='ls -la'

alias f='fg'
# alias fd='vanilla::find -d'
# alias fdi='vanilla::find -d -i'
# alias ff='vanilla::find'
# alias ffi='vanilla::find -i'
alias fk='sudo !!'

alias g='git'
alias gc='git -C'

alias h='man'
alias i='invoke'

# our functions
alias np="vanilla::new_project"

alias m='make'
alias md='mkdir'

alias p='python3'

alias so='vanilla::source'

if [ $(which zstd &> /dev/null) ]; then
    alias rsync='rsync --zc=zstd'
fi

if [ $(which tree &> /dev/null) ]; then
    # Get the major version number
    VERSION=$(tree --version | grep -Po '[0-9](?=(\.[0-9]){2})')
    if [ ${VERSION} -lt 2  ]; then
        alias t='tree'
    else
        alias t='tree --gitignore'
    fi
else
    alias t='vanilla::tree'
fi

alias show='swayimg'
alias today='date +%Y-%m-%d'

alias r='rm'
alias rf='rm -rf'
alias rd='rmdir'

alias pce='podman exec -it'
alias pck='podman stop -t0'
alias pcs='podman start'
alias pcr='podman remove'
alias pci='vanilla::podman_shell'
alias psall='podman ps -qa|xargs podman start'

alias nwl='networkctl list'
alias nws='networkctl status'
alias nwr='networkctl reload'
alias nwd='networkctl down'
alias nwu='networkctl up'
alias nwrs='systemctl restart systemd-networkd'

